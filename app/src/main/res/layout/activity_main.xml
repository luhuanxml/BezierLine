<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView android:layout_width="match_parent"
              app:layout_constraintTop_toTopOf="parent"
              android:id="@+id/onceBezier"
              android:gravity="center"
              android:padding="15dp"
              android:layout_margin="5dp"
              android:background="@android:color/holo_green_light"
              android:text="一次贝塞尔曲线"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="match_parent"
              app:layout_constraintTop_toBottomOf="@id/onceBezier"
              android:id="@+id/twiceBezier"
              android:gravity="center"
              android:padding="15dp"
              android:layout_margin="5dp"
              android:background="@android:color/holo_green_light"
              android:text="二次贝塞尔曲线"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="match_parent"
              android:layout_margin="5dp"
              app:layout_constraintTop_toBottomOf="@id/twiceBezier"
              android:id="@+id/thirdBezier"
              android:gravity="center"
              android:padding="15dp"
              android:background="@android:color/holo_green_light"
              android:text="三次贝塞尔曲线"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="match_parent"
              android:layout_margin="5dp"
              app:layout_constraintTop_toBottomOf="@id/thirdBezier"
              android:id="@+id/forthBezier"
              android:gravity="center"
              android:padding="15dp"
              android:background="@android:color/holo_green_light"
              android:text="四次贝塞尔曲线"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="match_parent"
              android:layout_margin="5dp"
              app:layout_constraintTop_toBottomOf="@id/forthBezier"
              android:id="@+id/loveBezier"
              android:gravity="center"
              android:padding="15dp"
              android:background="@android:color/holo_green_light"
              android:text="四次贝塞尔曲线"
              android:layout_height="wrap_content"/>



</android.support.constraint.ConstraintLayout>